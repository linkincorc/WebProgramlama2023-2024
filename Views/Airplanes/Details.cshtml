@model PlaneTicket.Models.Airplane

@{
    ViewData["Title"] = "Airplane Details";
    var availableSeatsCount = ViewBag.AvailableSeatsCount as int?;
}

<h1>Airplane Details</h1>

<div>
    <h4>Airplane</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SerialNumber)
        </dd>
        <dt class="col-sm-2">Available Seats</dt>
        <dd class="col-sm-10">@availableSeatsCount</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>