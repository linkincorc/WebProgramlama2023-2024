@model PlaneTicket.Models.Flight
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Flight Details";
    var isAdmin = User.IsInRole("Admin");
}

<h1>Flight Details</h1>

<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArrivalTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightDuration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightDuration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Origin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Origin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airplane)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airplane.Name)
        </dd>
    </dl>
</div>
<div>
    @if (isAdmin)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" 
              onsubmit="return confirm('Are you sure you want to delete this flight?');">
            <input type="hidden" name="__RequestVerificationToken" 
                   value="@Html.AntiForgeryToken()">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    }
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
